    IncludeFile="stm32f4xx.h;stm32f4xx_hal.h" 
    Name="STemWin" 
    RootFolder="Middlewares/ST/STemWin/" 
    Version="STM32Cube_FW_F4_V1.16.0" 
    ns0:schemaLocation="http://mcd.rou.st.com/modules.php?name=mcu ../../../../../../../doc/V4/Development/Specifications/db/IP_Configs.xsd">
    
    <!-- RefConfig for On Chip Display Controller -->
    <RefConfig Name="ST_EMWIN_Config" Comment="Init">	     
        <CallLibMethod Name="GUI_Init" ReturnHAL="false"/>                       
        <Component Name="Middlewares:ST_EMWIN"/>
        <Component Name="Middleware:ST_EMWIN:OS:$GUI_OS_use"/>
        <Component Name="Middleware:ST_EMWIN:Lib:$OPTIM_OS_use"/> 
        <ConfigFile Name="GUI_CONF_H"/> 	
        <ConfigFile Name="GUI_CONF_C"/>
        <ConfigFile Name="LCD_CONF_C"/>
        <ConfigFile Name="LCD_CONF_H"/> 
         <ConfigFile Name="STEmWIN_Wrapper_C"/>
    </RefConfig>
    
        
    <!-- MZA here we have the description of the structure where the CallBack (function pointer) must be initialized --> 
    <LibMethod Name="GUI_Init" Comment="">
    </LibMethod> 
    
    <!--
        In the following, have been commented the STEM WIN Files to be copied (according to OS, optimization level and compiler option.
        Need to get project manager updates from third party branch, in order to manage conditions according to compiler and library file extensions
    -->
    <RefComponent Cclass="Middleware" Cgroup="ST_EMWIN" Cversion="V5.32">
        <File Name="inc/*.h" Category="header"/>      
        <SubComponent Csub="OS" Cvariant="0" >
            <File Category="source" Name="OS/GUI_X.c" />
        </SubComponent>
        <SubComponent Csub="OS" Cvariant="1" >
            <File Name="OS/GUI_X_OS.c" Category="source"/>
        </SubComponent>
        <!-- No optimization, No OS : 0 -->
		
        <SubComponent Csub="Lib" Cvariant="0" >
            <File Category="library" Condition="GCC;S_Tcompiler_GCC" Name="Lib/STemWin532_CM4_GCC.a" Version=""/>
            <File Category="library" Condition="IAR;S_Tcompiler_IAR" Name="Lib/STemWin528_CM4_IAR.a" Version=""/>
            <!-- <File Category="library" Condition="IAR;S_Tcompiler_IAR" Name="Lib/STemWin532_CM4_IAR.a" Version=""/> -->
            <File Category="library" Condition="KEIL;S_Tcompiler_KEIL" Name="Lib/STemWin532_CM4_Keil.lib" Version=""/>
        </SubComponent>
        <!-- With Optimization, No OS => Cvariant = 1 -->		
        <SubComponent Csub="Lib" Cvariant="1" >
            <File Category="library" Condition="GCC;S_Tcompiler_GCC" Name="Lib/STemWin532_CM4_GCC_ot.a" Version=""/>
            <File Category="library" Condition="IAR;S_Tcompiler_IAR" Name="Lib/STemWin532_CM4_IAR_ot.a" Version=""/>
            <File Category="library" Condition="KEIL;S_Tcompiler_KEIL" Name="Lib/STemWin532_CM4_Keil_ot.lib" Version=""/>
        </SubComponent>
        <!-- No Optimization, With OS => Cvariant = 2 -->		
        <SubComponent Csub="Lib" Cvariant="2" >
            <File Category="library" Condition="GCC;S_Tcompiler_GCC" Name="Lib/STemWin532_CM4_OS_GCC.a" Version=""/>
            <File Category="library" Condition="IAR;S_Tcompiler_IAR" Name="Lib/STemWin532_CM4_OS_IAR.a" Version=""/>
            <File Category="library" Condition="KEIL;S_Tcompiler_KEIL" Name="Lib/STemWin532_CM4_OS_Keil.lib" Version=""/>
        </SubComponent>
        <!-- With Optimization, With OS => Cvariant = 3 -->		
        <SubComponent Csub="Lib" Cvariant="3" >
            <File Category="library" Condition="GCC;S_Tcompiler_GCC" Name="Lib/STemWin532_CM4_OS_GCC_ot.a" Version=""/>
            <File Category="library" Condition="IAR;S_Tcompiler_IAR" Name="Lib/STemWin532_CM4_OS_IAR_ot.a" Version=""/>
            <File Category="library" Condition="KEIL;S_Tcompiler_KEIL" Name="Lib/STemWin532_CM4_OS_Keil_ot.lib" Version=""/>
        </SubComponent>
   
    </RefComponent>
	
    <!-- GUIConf.h -->
    <RefConfigFile Name="GUI_CONF_H" Description="Header file for GUI configuration" Template="GUIConf_h.ftl">      
        <File Name="GUIConf.h" Category="header" Version="" Condition="all"/>
        <!-- Parameters for Function and Buffer Configurations -->
        <Argument Name="GUI_NUM_LAYERS" GenericType="simple" Comment="Maximum number of available layers"/>
        <Argument Name="GUI_DEFAULT_FONT" GenericType="simple" Comment="Default Font"/>
        <Argument Name="GUI_SUPPORT_MOUSE" GenericType="simple" Comment="Mouse support"/>
        <Argument Name="GUI_WINSUPPORT" GenericType="simple" Comment="Window manager usage"/>        
        <Argument Name="GUI_SUPPORT_MEMDEV" GenericType="simple" Comment="Memory Device package availability"/> 
        <Argument Name="GUI_SUPPORT_DEVICES" GenericType="simple" Comment="Device pointers usage"/>                 
    </RefConfigFile>
    <!-- GUIConf.c : use example GUIConf_stm32469i_eval.c as template -->
    <RefConfigFile Name="GUI_CONF_C" Description="Source file for Display controller initialization" Template="GUIConf_c.ftl">      
        <File Name="GUIConf.c" Category="source" Version="" Condition="all"/>
        <Argument Name="GUI_NUMBYTES" GenericType="simple" Comment="Number of Bytes available for the GUI. Must be a multiple of 1024."/> 
    </RefConfigFile>
    <!-- hw_init a voir si necessaire-->
    <RefConfigFile Name="LCD_CONF_H" Description="Header file for Display controller configuration" Template="hw_init_h.ftl">      
        <File Name="HW_Init.h" Category="header" Version="" Condition="all"/>            
    </RefConfigFile> 
        <RefConfigFile Name="LCD_CONF_H" Description="Header file for Display controller configuration" Template="hw_init_c.ftl">      
        <File Name="HW_Init.c" Category="source" Version="" Condition="all"/>            
    </RefConfigFile> 

    <!-- wrapper -->
    <RefConfigFile Name="STEmWIN_Wrapper_C" Description="Source file for Display driver configuration" Template="stemwin_wrapper_c.ftl">      
        <File Name="stemwin_wrapper.c" Category="source" Version="" Condition="all"/>  
         <Argument Name="LIN_Orientation_Layer0" GenericType="simple" Comment="Maximum number of available layers"/>              
    </RefConfigFile> 
